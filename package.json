{
  "name": "tetribass-server",
  "repository": "https://github.com/NunkuGemu/tetribass-server",
  "license": "MIT",
  "dependencies": {
    "bufferutil": "^4.0.7",
    "dotenv": "^16.0.3",
    "nanoid": "^4.0.0",
    "utf-8-validate": "^6.0.1",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.50.0",
    "chai": "^4.3.7",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "mocha": "^10.2.0",
    "mocha-steps": "^1.3.0",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.18"
  },
  "scripts": {
    "clean": "rm -rf node_modules && yarn cache clean",
    "dev": "concurrently --kill-others \"tsc -w\" \"nodemon dist/index.js\"",
    "format": "yarn lint && yarn prettier --write .",
    "lint": "eslint . --fix --ext .js,.ts",
    "postinstall": "is-ci || husky install",
    "start": "tsc && node dist/index.js",
    "test": "NODE_ENV=test mocha -r ts-node/register test/*.ts",
    "update": "yarn upgrade-interactive --latest"
  },
  "type": "module"
}
