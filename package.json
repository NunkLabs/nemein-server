{
  "name": "tetribass-server",
  "repository": "https://github.com/NunkuGemu/tetribass-server",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf node_modules && yarn cache clean",
    "dev": "concurrently --kill-others \"tsc -w\" \"nodemon dist/index.js\"",
    "format": "yarn lint && yarn prettier --write .",
    "lint": "eslint . --fix --ext .js,.ts",
    "postinstall": "is-ci || husky install",
    "start": "tsc && node dist/index.js",
    "test": "NODE_ENV=test mocha -r ts-node/register test/*.ts",
    "update": "yarn upgrade-interactive --latest"
  },
  "dependencies": {
    "bufferutil": "^4.0.6",
    "dotenv": "^16.0.1",
    "nanoid": "3.3.4",
    "utf-8-validate": "^5.0.9",
    "ws": "^8.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "chai": "^4.3.6",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.0",
    "is-ci": "^3.0.1",
    "mocha": "^10.0.0",
    "mocha-steps": "^1.3.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2",
    "typings": "^2.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.18"
  }
}
